{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ES2023",
		"strict": true,
		"esModuleInterop": true
	},

	"ts-node": {
		"swc": true,
		"require": ["tsconfig-paths/register", "./config.ts"]
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts",
		"config.ts",
		"scripts",
		"eslint.config.ts",
		"vitest.config.mts"
	],
	"exclude": ["src/public/*"]
}
